#Extract Source in %SOURCE
extract_source:

#Build Source in %BUILD
build_source:
		CWD %BUILD/%PACKAGE/data
		INVOKE_MAKE
		
#Clean Source
clean_source:
		CWD %BUILD/%PACKAGE/data
		INVOKE_MAKE clean
		
#-----------------Mandatory Rules for every binary Package ----------------------------
#Rules to create jtag_hw package
build_package-jtag_hw:
		PACK_SPX ./ %BUILD/%PACKAGE/data/jtag_hw.ko

#Rules to create jtag_hw_dev package
build_package-jtag_hw_dev:
		MKDIR_CLEAN %TEMPDIR/%PACKAGE/tmp
		COPY_FILE %BUILD/%PACKAGE/data/Module.symvers %TEMPDIR/%PACKAGE/tmp
		COPY_FILE %BUILD/%PACKAGE/data/ast_jtag.h %TEMPDIR/%PACKAGE/tmp
		PACK_SPX ./ %TEMPDIR/%PACKAGE/tmp
