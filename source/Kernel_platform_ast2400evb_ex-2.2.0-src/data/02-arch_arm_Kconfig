+# Define the SOC if any used here and sub components of the SOC here
+config SOC_AST2400
+   bool
+   select CPU_ARM926T
+   default y if ARCH_AST2400EVB
+
+config BASESOC_AST
+   bool
+   default y if SOC_AST2400
+
+config ASTMAC100
+   tristate "Aspeed MAC 100 support"
+   select PHYLIB
+   depends on ETHERNET && BASESOC_AST
+   default y
+
+config LEGENCY_ASTMAC100
+   tristate "Legacy Aspeed MAC 100 support"
+   select PHYLIB
+   depends on ETHERNET && BASESOC_AST
+   default y
+
+config ASTSERIAL
+   bool "Aspeed Serial support"
+   depends on BASESOC_AST
+   default y if BASESOC_AST
+
+config AST_PHY_ADDR
