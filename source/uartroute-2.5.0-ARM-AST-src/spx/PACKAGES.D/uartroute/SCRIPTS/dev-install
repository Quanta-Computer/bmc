# Install Script

build-install:
	COPY_DIR ./ %IMAGE_TREE/lib/modules/generic/misc
	ADD_MODULES uartroute_mod
	EXECUTE if [ "%CONFIG_SPX_FEATURE_SOL_SERIAL_PORT_SHARING_ENABLE" == "YES" ]; then echo "CONFIG_SPX_FEATURE_SOL_SERIAL_PORT_SHARING_ENABLE" >> %IMAGE_TREE/etc/core_features;fi;
	EXECUTE if [ "%CONFIG_SPX_FEATURE_SOL_EXTERNAL_SUPERIO" == "YES" ]; then echo "CONFIG_SPX_FEATURE_SOL_EXTERNAL_SUPERIO" >> %IMAGE_TREE/etc/core_features;fi;
	EXECUTE if [ "%CONFIG_SPX_FEATURE_SOL_INTERNAL_SUPERIO" == "YES" ]; then echo "CONFIG_SPX_FEATURE_SOL_INTERNAL_SUPERIO" >> %IMAGE_TREE/etc/core_features;fi;
	EXECUTE if [ "%CONFIG_SPX_FEATURE_SOL_INTERNAL_SUPERIO_SERIAL_PORT_SHARING" == "YES" ]; then echo "CONFIG_SPX_FEATURE_SOL_INTERNAL_SUPERIO_SERIAL_PORT_SHARING" >> %IMAGE_TREE/etc/core_features;fi;
	EXECUTE if [ "%CONFIG_SPX_FEATURE_SOL_SERIAL_PORT_SHARING_CUSTOMIZATION" == "YES" ]; then echo "CONFIG_SPX_FEATURE_SOL_SERIAL_PORT_SHARING_CUSTOMIZATION" >> %IMAGE_TREE/etc/core_features;fi;
	COPY_DIR ./ %IMAGE_TREE/lib/modules/2.6.28.10-ami/misc/
	ADD_MODULES uartroute
	MAKE_CHAR_NODE lpcuart0 103 0
debug-install:
