# Install Script

build-install:
	COPY_DIR ./ %IMAGE_TREE/lib/modules/generic/misc
	ADD_MODULES kcs
# Nodes are created by kcs hardware for every instance of kcs
	MAKE_CHAR_NODE kcs0 42 0
	MAKE_CHAR_NODE kcs1 42 1
	MAKE_CHAR_NODE kcs2 42 2
	MAKE_CHAR_NODE kcs3 42 3
	MAKE_CHAR_NODE kcs4 42 4
	MAKE_CHAR_NODE kcs5 42 5
	MAKE_CHAR_NODE kcs6 42 6
	MAKE_CHAR_NODE kcs7 42 7
	MAKE_CHAR_NODE kcs8 42 8
	MAKE_CHAR_NODE kcs9 42 9
	MAKE_CHAR_NODE kcs10 42 10
	MAKE_CHAR_NODE kcs11 42 11
	
debug-install:
