#Extract Source	in %SOURCE
extract_source:

#Build Source in %BUILD
build_source:
	CWD %BUILD/%PACKAGE/data
	INVOKE_MAKE
	
#Clean Source
clean_source:
	CWD %BUILD/%PACKAGE/data
	INVOKE_MAKE clean
	
#--------------------- Mandatory Rules for every binary package -------------------------

# Rules to create host_spi_flash package
build_package-host_spi_flash:
	PACK_SPX ./ %BUILD/%PACKAGE/data/host_spi_flash.ko

# Rules to create host_spi_flash_dev package
build_package-host_spi_flash_dev:
	MKDIR_CLEAN %TEMPDIR/%PACKAGE/tmp
	COPY_FILE %BUILD/%PACKAGE/data/host_spi_flash.h  %TEMPDIR/%PACKAGE/tmp
	PACK_SPX ./ %TEMPDIR/%PACKAGE/tmp
