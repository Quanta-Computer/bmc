# List of Supported Rules
supported_rules: extract_source build_source clean_source

#Extract Source	in %SOURCE
extract_source:	

#Build Source in %BUILD
build_source:
	CWD %BUILD/%PACKAGE/data/
	INVOKE_MAKE
	
#Clean Source
clean_source:
	CWD %BUILD/%PACKAGE/data/
	INVOKE_MAKE clean

#--------------------- Mandatory Rules for every binary package -------------------------
# Rules to create libraphters package
build_package-libraphters:
	PACK_SPX  ./   %BUILD/%PACKAGE/data/libraphters.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX

# Rules to create libraphters_dev package
build_package-libraphters_dev:
	#header file
	MKDIR_CLEAN %TEMPDIR/%PACKAGE/tmp/
	COPY_FILE %BUILD/%PACKAGE/data/raphters.h %TEMPDIR/%PACKAGE/tmp/
	COPY_FILE %BUILD/%PACKAGE/data/dispatcher.h %TEMPDIR/%PACKAGE/tmp/
	COPY_FILE %BUILD/%PACKAGE/data/error.h %TEMPDIR/%PACKAGE/tmp/
	COPY_FILE %BUILD/%PACKAGE/data/request.h %TEMPDIR/%PACKAGE/tmp/
	COPY_FILE %BUILD/%PACKAGE/data/response.h %TEMPDIR/%PACKAGE/tmp/
	COPY_FILE %BUILD/%PACKAGE/data/libraphters.a %TEMPDIR/%PACKAGE/tmp/
	COPY_FILE %BUILD/%PACKAGE/data/libraphters.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX %TEMPDIR/%PACKAGE/tmp/
	PACK_SPX ./ %TEMPDIR/%PACKAGE/tmp
	
